@{ 
    bool isUserAdministrator = Context.User.Claims.Any();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />

    <style>
        body {
            overflow-y: scroll;
        }
    </style>
</head>
<body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
        <div class="container-xxl d-flex align-items-baseline">
            <a class="navbar-brand fw-light"
               asp-controller="Home" asp-action="Index">
                <span class="fw-bolder">Simple</span>Store
            </a>

            <ul class="nav nav-pills me-auto">
                @if (isUserAdministrator)
                {
                    <li class="nav-item">
                        <a class="btn btn-toolbar"
                           asp-area="Administration" asp-controller="Home" asp-action="Index">
                            Administration
                        </a>
                    </li>
                }
            </ul>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="btn btn-success" aria-current="page"
                       asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart-fill"></i>
                        Cart
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-xxl my-3">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>