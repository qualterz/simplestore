@model SimpleStore.Web.Areas.Administration.ViewModels.ItemViewModel

<div class="d-flex flex-column gap-3">
    <form method="post" asp-action="Edit">
        @Html.HiddenFor(e => e.ItemId)

        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title">Edit Item</h5>
                <button class="btn btn-primary ms-auto">
                    <i class="bi bi-bag-check"></i>
                    Submit
                </button>
            </div>
            <div class="card-body">
                <div class="d-flex flex-column gap-1">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" id="floatingInput"
                               placeholder="@Html.NameFor(e => e.Name)">
                        <label for="floatingInput">@Html.NameFor(e => e.Name)</label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Price" class="form-control" id="floatingInput"
                               placeholder="@Html.NameFor(e => e.Price)">
                        <label for="floatingInput">@Html.NameFor(e => e.Price)</label>
                    </div>
                </div>
            </div>
        </div>
    </form>

    @if (Model.ItemId != default)
    {
        <partial name="_Characteristics" model="Model" />
    }
</div>