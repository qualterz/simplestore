@using SimpleStore.Web.Areas.Administration.ViewModels;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />

    <style>
        body {
            overflow-y: scroll;
        }
    </style>
</head>
<body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
        <div class="container-xxl d-flex align-items-baseline">
            <a class="navbar-brand fw-light"
               asp-area="Store" asp-controller="Home" asp-action="Index">
                <span class="fw-bolder">Simple</span>Store
            </a>

            <ul class="nav nav-pills me-auto">
                <li class="nav-item">
                    <form class="d-inline-block" method="post"
                          asp-route-returnUrl="@Context.Request.Path" asp-area="Account"
                          asp-controller="Login" asp-action="Logout">
                        <button class="btn btn-toolbar" type="submit">
                            Logout
                        </button>
                    </form>
                </li>
            </ul>

            <ul class="nav nav-pills">
                @if (ViewBag.TabType is not null)
                {
                    var tabType = ViewBag.TabType;

                <li class="nav-item">
                    <a class="nav-link @(tabType == TabType.Items ? "active" : "")"
                       asp-controller="Items" asp-action="Index">
                        Items
                    </a>
                </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container-xxl my-3">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/administration.js"></script>
</body>
</html>